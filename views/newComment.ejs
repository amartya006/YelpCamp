<%- include ('partials/header') %>
<div class="container" id="form" class="mt-5">
    <h1 class="text-center">Add New Comment to <%= campground.name %></h1>

    <form action="/campground/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="Write Your Comment....">
        </div>
        
        
        <div class="form-group">
            <button class="btn btn-primary btn-block btn-lg">Submit</button>
        </div>
    </form>
    <a href="/campground/<%= campground._id %>">GO BACK</a>
</div>
<%- include ('partials/footer') %>