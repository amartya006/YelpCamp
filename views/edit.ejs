<%- include ('partials/header') %>
<div class="container" id="form" class="mt-5">
    <h1 class="text-center">Edit <%= campground.name %></h1>

    <form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campground[url]" value="<%= campground.url %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campground[desc]" value="<%= campground.description %>">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block btn-lg">Edit</button>
        </div>
    </form>
    <a href="/campground">GO BACK</a>
</div>
<%- include ('partials/footer') %>