<%- include ('partials/header') %>

    <header class="jumbotron container">
        <div class="container text-center">
            <h1>Our Campgrounds</h1>
            <br>
            <a class="btn btn-primary btn-lg" href="/campground/new">Add New Campgrounds</a>
        </div>
        
    </header>
    <div class="container">
        <div class="row">
            
                <% camps.forEach(function(camp){ %>
                <div class="col-md-3 col-sm-6 text-center imgs">
                    <div class="card" style="width: 90%;">
                      <img src="<%= camp.url %>" class="card-img-top" alt="...">
                      <div class="card-body">
                        <h5 class="card-title"><%= camp.name %></h5>
                        <a href="/campground/<%= camp._id %>" class="btn btn-primary"> More Info >></a>
                      </div>
                    </div>
                </div>
    <% }) %>
            
        </div>
    </div>
        
    
<%- include ('partials/footer') %>