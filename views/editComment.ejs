<%- include ('partials/header') %>
<div class="container" id="form" class="mt-5">
    <h1 class="text-center">Edit Your Review</h1>

    <form action="/campground/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        
        
        <div class="form-group">
            <button class="btn btn-primary btn-block btn-lg">Submit</button>
        </div>
    </form>
    <a href="/campground/<%= campground_id %>">GO BACK</a>
</div>
<%- include ('partials/footer') %>