<%- include ('partials/header') %>
<div class="container" id="form" class="mt-5">
    <h1 class="text-center">Add New Campground</h1>

    <form action="/campground" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="Camp Name">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="url" placeholder="Camp URL">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="desc" placeholder="Description">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block btn-lg">Submit</button>
        </div>
    </form>
    <a href="/campground">GO BACK</a>
</div>
<%- include ('partials/footer') %>